<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="catalog_product_modifications" resource="default" comment="Table with products modifications log">
        <column xsi:type="int" name="log_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="datetime" name="date" on_update="true" nullable="true" default="CURRENT_TIMESTAMP" comment="Log Date"/>
        <column xsi:type="varchar" name="sku" nullable="false" length="255" comment="SKU"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="log_id"/>
        </constraint>
    </table>
</schema>
